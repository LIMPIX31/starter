{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2022",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@app/entrypoint": [
        "app/entrypoint"
      ],
      "@app/providers": [
        "app/providers"
      ],
      "@app/root": [
        "app/root"
      ],
      "@app/routes": [
        "app/routes"
      ],
      "@entities/todo-card": [
        "entities/todo/card"
      ],
      "@features/append-todo": [
        "features/todo/append"
      ],
      "@features/remove-todo": [
        "features/todo/remove"
      ],
      "@pages/home": [
        "pages/home"
      ],
      "@theme/common": [
        "shared/theme/common"
      ],
      "@theme/font": [
        "shared/theme/font"
      ],
      "@theme/global": [
        "shared/theme/global"
      ],
      "@theme/provider": [
        "shared/theme/provider"
      ],
      "@theme/types": [
        "shared/theme/types"
      ],
      "@ui/button": [
        "shared/ui/button"
      ],
      "@ui/input": [
        "shared/ui/input"
      ],
      "@ui/layout": [
        "shared/ui/layout"
      ],
      "@widgets/todo-list": [
        "widgets/todo/list"
      ]
    }
  },
  "include": [
    "app/**/*",
    "pages/**/*",
    "widgets/**/*",
    "features/**/*",
    "entities/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "**/*.test.{ts,tsx}"
  ]
}
